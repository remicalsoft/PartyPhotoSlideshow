<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- 背景用のImageViewを重ねるためのFrameLayout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 背景用のぼかした画像1 -->
        <ImageView
            android:id="@+id/backgroundImageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="1.0"
            android:contentDescription="Background Image" />

        <!-- 背景用のぼかした画像2 -->
        <ImageView
            android:id="@+id/backgroundImageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:alpha="0.0"
            android:contentDescription="Background Image" />
    </FrameLayout>


    <!-- スライドショー用のImageViewを重ねるためのFrameLayout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- スライドショーのメイン画像1 -->
        <ImageView
            android:id="@+id/slideshowImageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:alpha="1.0"
            android:contentDescription="Slideshow Image" />

        <!-- スライドショーのメイン画像2 -->
        <ImageView
            android:id="@+id/slideshowImageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:alpha="0.0"
            android:contentDescription="Slideshow Image" />

    </FrameLayout>

    <!-- 画像カウンター ("2 / 10" のような表示) -->
    <TextView
        android:id="@+id/counterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="#80000000"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="1 / 10"
        tools:visibility="visible" />

    <!-- 新しい写真のサムネイル表示用ImageView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/thumbnailCardView"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/thumbnailImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="New Photo Thumbnail" />

    </androidx.cardview.widget.CardView>

    <!-- ダウンロード進捗表示用のビューグループ -->
    <LinearLayout
        android:id="@+id/progressLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#A0000000"
        android:padding="24dp"
        android:elevation="10dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/progressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="キャッシュを同期中... (5/20)" />
    </LinearLayout>

    <!-- 設定アイコン (歯車) -->
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_preferences"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/settings" />

    <!-- QRコード表示用ImageView -->
    <ImageView
        android:id="@+id/qrCodeImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:background="@android:color/white"
        android:padding="8dp"
        android:contentDescription="@string/qr_code_image"
        tools:srcCompat="@tools:sample/avatars" /> <!-- サンプル画像表示用 (tools) -->

</androidx.coordinatorlayout.widget.CoordinatorLayout>